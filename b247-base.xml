<?xml version="1.0" encoding="ISO-8859-1"?> 

<PropertyList>

  <sim include="Nasal/views.xml">
 
    <description>Boeing 247 (YASim)</description>
    <author>BARANGER Emmanuel (3D/FDM)</author>
    <aircraft-version>0.1</aircraft-version>
    <status>Alpha</status>
   
    <fuel-fraction>0.8</fuel-fraction>
  
    <sound>
      <path>Aircraft/Boeing-247/Sounds/b247-sound.xml</path>
    </sound>

    <multiplay>
      <chat_display>1</chat_display>
      <generic> 
        <int type="int" n="0">  0 </int>                                           <!--  0 immat -->
        <int type="int" n="1">  0 </int>                                           <!--  1 immat -->
        <int type="int" n="2">  0 </int>                                           <!--  2 immat -->
        <int type="int" n="3">  0 </int>                                           <!--  3 immat -->
        <int type="int" n="4">  0 </int>                                           <!--  4 immat -->
        <int type="int" n="5">  0 </int>                                           <!--  5 immat -->
        <int type="bool" n="6" alias="/smoke/active"> 0 </int>                     <!--  6 start smoke -->
        <int type="int" n="7" alias="smoke/particlepersec"> 50 </int>              <!--  7 particlepersec -->
        <int type="int" n="8"> 0 </int>                                            <!--  8 Noze type -->
        <int type="int" n="10" alias="controls/armament/trigger">0</int>           <!-- 10 reserved for bombable mode -->
        <float n="0" alias="/instrumentation/doors/crew/position-norm"/>
        <float n="1" alias="/instrumentation/doors/passenger/position-norm"/>
        <float n="2" alias="/position/gear-agl-m">  0 </float>                <!-- 11 altitude for MP shadow -->
        <float n="3" alias="/position/altitude-ft">  0 </float>                <!-- 11 altitude for MP shadow -->
        <float n="6" alias="/engines/engine[0]/n2" />
        <float n="7" alias="/engines/engine[1]/n2" />
        <float n="8" alias="/controls/engines/engine[0]/throttle" />
        <float n="9" alias="/controls/engines/engine[1]/throttle" />
        <string n="0" type="string" />
        <string n="9" type="string" />                                        <!-- string[9] reserved for bombable mode -->
      </generic>
    </multiplay>

    <flaps>
      <setting>0.00</setting>
      <setting>0.25</setting>
      <setting>0.50</setting>
      <setting>0.75</setting>
      <setting>1.00</setting>
    </flaps>

    <help>
      <title>Douglas b247</title>
      <key>
        <name>d</name>
        <desc>Open/Close crew door</desc>
      </key>
      <key>
        <name>D</name>
        <desc>Open/Close passenger door</desc>
      </key>
      <key>
        <name>E</name>
        <desc>Open/Close cargo door</desc>
      </key>
    </help>

    <menubar include="Dialogs/b247-menu.xml"/>

  </sim>

  <controls>
    <engines>
      <engine n="0">
        <magnetos>0</magnetos>
      </engine>
      <engine n="1">
        <magnetos>0</magnetos>
      </engine>
    </engines>
  </controls>

  <engines>
    <engine n="0">
      <engine-num type="int">0</engine-num>
      <rpm>500</rpm>
      <running>false</running>
    </engine>
    <engine n="1">
      <engine-num type="int">1</engine-num>
      <rpm>500</rpm>
      <running>false</running>
    </engine>
  </engines>

  <input>
    <keyboard include="Nasal/b247-keyboard.xml"/>
  </input>
 
  <nasal>
    <doors>
      <file>Aircraft/Boeing-247/Nasal/doors.nas</file>
    </doors>
    <b247>
      <file>Aircraft/Boeing-247/Nasal/liveries.nas</file>
      <file>Aircraft/Boeing-247/Nasal/light.nas</file>
    </b247>
  </nasal>

</PropertyList>

